<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Izin Akses Internet & Jaringan (Wajib untuk Streaming) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Izin Notifikasi & Service (Agar musik tetap jalan di background) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- (Opsional) Izin baca file lokal jika fitur ini akan dipakai nanti -->
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />

    <!--
       PENTING: Tambahkan android:usesCleartextTraffic="true"
       agar bisa akses API lokal (HTTP) tanpa SSL/HTTPS
    -->
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VibesTune"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        tools:targetApi="33">

        <!-- 1. HOME ACTIVITY: Ini adalah pintu masuk aplikasi (Launcher) -->
        <activity
            android:name=".HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 2. MUSIC PLAYER ACTIVITY: Halaman pemutar musik -->
        <activity
            android:name=".MusicPlayerActivity"
            android:exported="false" />

        <!-- 3. MAIN ACTIVITY: Halaman lama (Non-Launcher) -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- 4. SERVICE: Service untuk memutar musik di latar belakang -->
        <service android:name=".MusicPlayerService" />

    </application>

</manifest>
